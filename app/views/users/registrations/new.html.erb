<section id="register-form">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-box">
          <div class="page-header">
            <h2 class="text-center">Sign Up</h2>
            <hr/>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.text_field :callsign, class: "form-control input-lg", placeholder: "Callsign" %>
              </div>
              <div class="form-group">
                <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email Address" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Password Confirmation" %>
              </div>
              <div class="form-group">
                <%= f.submit "Sign Up", class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
            <div class="text-center">
              <small>By signing up, you agree to the <%= link_to "Terms of Service", "#" %></small>
            </div>
          </div>
          <p class="text-center">Already have an account? <%= link_to "Log In", login_path %></p>
        </div>
      </div>
    </div>
  </div>
</section>
