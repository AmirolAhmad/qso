<section id="login-form">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="form-box">
          <div class="page-header">
            <h2 class="text-center">Log In</h2>
            <hr/>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.text_field :login, class: "form-control input-lg", autofocus: true, placeholder: "Callsign or email address" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control input-lg", autocomplete: "off", placeholder: "Password" %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="form-group">
                  <div class="checkbox">
                    <label><%= f.check_box :remember_me %> Remember me for 2 weeks</label>
                  </div>
                </div>
              <% end %>
              <div class="form-group">
                <%= f.submit "Log In", class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
            <div class="text-center">
              <%= link_to "Forgot password?", new_user_password_path, class: "btn btn-link btn-xs" %>
            </div>
          </div>
          <p class="text-center">Don't have an account? <%= link_to "Sign Up", register_path %></p>
        </div>
      </div>
    </div>
  </div>
</section>
